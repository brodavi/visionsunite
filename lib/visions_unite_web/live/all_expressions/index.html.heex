<NavComponent.nav active={@live_action} version={@version} />

<br>

<%= if Enum.count(@all_expressions) != 0 do %>
  <section>
    <h3>ALL Expressions</h3>
    <div id="all-expressions">
      <%= if @version == "v3" do %>

        <%= for expression <- @all_expressions do %>
          <div id={"supported-expression-#{expression.id}"} class="roww">
            <div>
              <ExpressionComponent.expression expression={expression} current_user_id={@current_user_id} v3={true} />
            </div>
          </div>
        <% end %>

      <% else %>
        <%= for expression <- @all_expressions do %>
          <div id={"supported-expression-#{expression.id}"} class="roww">
            <div>
              <ExpressionComponent.expression expression={expression} current_user_id={@current_user_id} />
            </div>
            <div>
              <button class="small" phx-click="subscribe" phx-value-expression_id={expression.id}>Join Conversation</button>
            </div>
            <div>
              <button class="small" phx-click="ignore" phx-value-expression_id={expression.id}>Ignore</button>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
<% end %>


